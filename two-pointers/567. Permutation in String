from collections import Counter
class Solution:
    def checkInclusion(self, s1: str, s2: str) -> bool:
        if len(s1) >len(s2):
            return False       
        need = Counter(s1)
        left = 0
        valid = 0

        window = {}
        window_size = len(s1)
        for right in range(window_size):
            c = s2[right]
            if c in need:
                window[c] = window.get(c, 0) + 1
                if window[c] == need[c]:
                    valid += 1
        if valid == len(need):
            return True
        

        for right in range(len(s1), len(s2)):
            c = s2[right]
            if c in need:
                window[c] = window.get(c,0) + 1
                if window[c] == need[c]:
                    valid +=1

            d = s2[left]
            left +=1
            if d in need:
                if window[d] == need[d]:
                    valid -= 1
                window[d] -= 1

            if valid == len(need):
                return True
        return False




