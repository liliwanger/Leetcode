class Solution:
    def isValidSudoku(self, board: list[list[str]]) -> bool:
        # 用集合记录每行、每列、每个 3x3 宫格中出现过的数字
        rows = [set() for _ in range(9)]
        cols = [set() for _ in range(9)]
        boxes = [set() for _ in range(9)]  # box index = (r//3)*3 + (c//3)

        for r in range(9):
            for c in range(9):
                val = board[r][c]
                if val == '.':
                    continue
                if val in rows[r]:
                    return False
                rows[r].add(val)

                if val in cols[c]:
                    return False
                cols[c].add(val)

                bidx = (r // 3) * 3 + (c // 3)
                if val in boxes[bidx]:
                    return False
                boxes[bidx].add(val)

        return True
